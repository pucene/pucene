{
    "name": "pucene/pucene",
    "description": "Monorepository for pucene.",
    "license": "MIT",
    "authors": [
        {
            "name": "Johannes Wachter",
            "email": "johannes@sulu.io"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "pucene/analysis": "@dev",
        "pucene/dbal-driver": "@dev",
        "pucene/index": "@dev",
        "pucene/seal-adapter": "@dev"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.9",
        "friendsofphp/php-cs-fixer": "^3.13",
        "phpunit/phpunit": "^9.5",
        "phpspec/prophecy-phpunit": "^2.0",
        "jangregor/phpstan-prophecy": "^1.0"
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyze",
        "php-cs": "@php vendor/bin/php-cs-fixer fix --allow-risky=yes --verbose --diff --dry-run",
        "php-cs-fix": "@php vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "lint": [
            "@phpstan",
            "@php-cs"
        ]
    },
    "repositories": [
        {
            "type": "path",
            "url": "./packages/analysis",
            "canonical": false,
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "./packages/dbal-driver",
            "canonical": false,
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "./packages/index",
            "canonical": false,
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "./packages/seal-adapter",
            "canonical": false,
            "options": {
                "symlink": true
            }
        }
    ]
}
